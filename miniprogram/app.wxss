/**app.wxss**/
page {
  --height: 48px;
  --right: 190rpx;
}

.weui-navigation-bar .android {
  --height: 48px;
  --right: 222rpx
}

.c-navbar {
  height: 68px;
  /* padding-right: var(--right); */
  /* width: calc(100% - var(--right)); */
  width: 100%;
  color: #fff;
  font-size: 22px;
  font-weight: 500;
}

.weui-icon-checked {
  --weui-BRAND: #FFD624;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

button {
  background: initial;
}

button:focus {
  outline: 0;
}

button::after {
  border: none;
}


page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}


.btn-wrapper {
  padding: 48rpx;
  box-sizing: border-box;
  width: 100%;

}

.icon-logo {
  width: 64px;
  height: 64px;
}

.primary-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 8px;
  min-height: 160px;
  color: #FFCFDF;
  font-size: 24px;
  font-weight: 600;
  box-shadow: -2.6614480018615723px -2.6614480018615723px 133.07240295410156px 0px #FFFFFF05 inset;
  background: linear-gradient(0deg, rgba(50, 36, 95, 0.25), rgba(50, 36, 95, 0.25)), radial-gradient(100% 100% at 0% 0%, rgba(255, 255, 255, 0.24) 0%, rgba(255, 255, 255, 0) 100%);
  backdrop-filter: blur(10px);
  border-radius: 4px;
  border: 1px solid rgba(255, 255, 255, 0.4);
}

.primary-btn mp-icon {
  margin-right: 16rpx;
}

.ad-wrapper {
  width: 100%;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}

/* 结果弹窗 */
.res-half-dialog {
  height: 70%;
  background: #32245F;
  color: white;
  background-image: url(https://7363-scan-star-9g936she293719d9-1306033714.tcb.qcloud.la/result-bg-v2.png?sign=f66df75b42b98ac1ff3a234b51945f5b&t=1645262593);
  background-repeat: no-repeat;
  background-size: cover;
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
}

.res-half-dialog view {
  color: inherit;
}

.res-half-dialog .weui-half-screen-dialog__hd {
  height: 0;
}

.res-half-dialog .ad-wrapper {
  bottom: 40rpx;
}

.res-content-top {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx;
}

.res-arrowdown {
  border-radius: 48rpx;
  width: 100rpx;
  height: 50rpx;
  background-color: rgba(255, 255, 255, .15);
  /* background-color: lightpink; */
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 64rpx;
}

.res-arrowdown .weui-icon {
  transform: rotate(90deg) translateX(2rpx);
}

.thumb-image {
  width: 240rpx;
  height: 240rpx;
  border-radius: 16rpx;
  background-color: rgba(255, 255, 255, .15);
}

.res-swiper {
  height: 400rpx;
}

.res-swiper-item-inner {
  padding: 0 16rpx;
}

.res-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 16rpx;
}

.res-name {
  font-size: large;
  line-height: 1.618;
  font-weight: 600;
  color: inherit;
  flex: 1;
}

.res-share {
  background-color: transparent;
  border-width: 0;
}

.res-labels {
  font-size: small;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  padding-bottom: 40rpx;
}

.res-label {
  margin-right: 16rpx;
  padding: 4rpx 16rpx;
  background-color: rgba(255, 255, 255, .15);
  border-radius: 64rpx;
  font-size: xx-small;
  opacity: .6;
}

.res-info {
  font-size: small;
  opacity: .6;
}

.footer-mark {
  text-align: center;
  position: absolute;
  bottom: 80rpx;
  left: 0;
  right: 0;
  margin: auto;
}

.footer-mark text {
  color: rgba(255, 255, 255, 0.4);
  font-weight: 300;
  font-size: xx-small;
}

.res-gallery .weui-gallery__info {
  display: none;
}

.feed-dialog .weui-dialog__hd {
  display: none;
}

.feed-dialog icon {
  margin: 32rpx 0;
}

.feed-dialog-title {
  font-size: larger;
  color: #000;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.icon-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: -16rpx;
  transform: translateY(-8rpx);
}

.icon-btn mp-icon {
  padding: 16rpx;
}

.flex {
  display: flex;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}